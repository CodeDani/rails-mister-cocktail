<div class="card-container">
  <div class="cocktail-show-card">
    <h1><%= @cocktail.name %></h1>
    <% @cocktail.doses.each do |dose| %>
      <div class="ingredients2"> <%= dose.description %> </div>
    <% end %>
  </div>
  <div class="cocktail-show-card">
    <h2>A bit more about this cocktail:</h2>
    <ul>
         <p> Ingredients: <% @cocktail.doses.each do |dose|  %> </p>
            <div class="ingredients"><li><%= dose.ingredient.name %> - <em><%= dose.description  %></em> </li>  </div>
            <button type="button" class="btn btn-link"><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete %></button>
          <% end %>
</ul>
  </div>
<%= link_to "Add dose",  new_cocktail_dose_path(@cocktail) %>
<%= link_to "Go back to cocktails", cocktails_path %>
