<div class="card-container">
  <div class="cocktail-show-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo unless @cocktail.photo.blank?%>');">
    <h1><%= @cocktail.name %></h1>
    <div class="cocktail-description"> <%= @cocktail.description %> </div>
    <% @cocktail.doses.each do |dose| %>
    <% end %>
  </div>
  <div class="cocktail-show-card-details">
    <h1>A bit more about this cocktail:</h1>
    <ul>
         <p> Ingredients: <% @cocktail.doses.each do |dose|  %> </p>
            <div class="ingredients"><li><%= dose.description  %><%= dose.ingredient.name %></li>  </div>
            <button type="button" class="btn btn-link"><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete, data: {confirm: "Are you sure you want to get rid of this ingredient?"}  %></button>
          <% end %>
</ul>
  </div>
<center><%= link_to "Add dose",  new_cocktail_dose_path(@cocktail) %></center>
<center><%= link_to "Go back to cocktails", cocktails_path %></center>
